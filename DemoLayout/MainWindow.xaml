<Window x:Class="DemoLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="543" Width="883">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15,2,2,2"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="10"></Setter>
        </Style>
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#FF343A40" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="/uac_logo.png" Margin="5"></Image>
                <TextBlock Padding="5" Foreground="White" Grid.Column="1" Text="UAC Integrated System" VerticalAlignment="Center"></TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    <Label Foreground="White" Content="Registrar Module" FontWeight="Bold"></Label>
                    <Button Content="Student"></Button>
                    <Button Content="Section"></Button>
                    <Button Content="Grades Encoding"></Button>
                    <Button Content="Subject"></Button>
                    <Button Content="Reports"></Button>
                    <Button Content="Maintenance"></Button>
                    <Button Content="Announcements"></Button>
                    <Button Content="Servey"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid DockPanel.Dock="Top" Height="40" Background="#FFFFC107">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Margin="8" Source="/8182885.png"></Image>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Stefan"></TextBlock>
            <Image Margin="8" Grid.Column="2" Source="/6387426.png"></Image>
        </Grid>
        <Grid Margin="15">
            <Grid.Background>
                <ImageBrush Opacity="0.2" ImageSource="/uac_logo.png" Stretch="Uniform"/>
            </Grid.Background>
            <!-- 3 columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- rows -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TITLES -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <Image Width="18" Height="18" Margin="0,0,5,0" Source="/87578.png"/>
                <TextBlock Text="Statistics (2026-2027)"
               FontWeight="Bold"
               VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Last 3 Days -->
            <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="1">
                <Image Width="18" Height="18" Margin="0,0,5,0" Source="/calendar-249.png"/>
                <TextBlock Text="Last 3 Days Application"
               FontWeight="Bold"
               VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Interview -->
            <StackPanel Orientation="Horizontal" Margin="10" Grid.Column="2">
                <Image Width="18" Height="18" Margin="0,0,5,0" Source="/2118701.png"/>
                <TextBlock Text="For Your Interview"
               FontWeight="Bold"
               VerticalAlignment="Center"/>
            </StackPanel>

            <!-- LEFT COLUMN -->
            <Border Style="{StaticResource DashboardCard}" Grid.Row="1">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="119" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Total Applicants"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Row="2">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="2" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="New Applications"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Row="3">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="17" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Completed Requirements"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Row="4">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="3" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Applicants Scheduled Today"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Row="5">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="No Show"/>
                </StackPanel>
            </Border>

            <!-- MIDDLE COLUMN -->
            <Border Style="{StaticResource DashboardCard}" Grid.Column="1" Grid.Row="1">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Preparatory Department"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Column="1" Grid.Row="2">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="7" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Basic Education"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Column="1" Grid.Row="3">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="1" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Senior High School"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Column="1" Grid.Row="4">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="Higher Education"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCard}" Grid.Column="2" Grid.Row="1" Background="#FFD21717">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Text="0" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="For Your Interview" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>