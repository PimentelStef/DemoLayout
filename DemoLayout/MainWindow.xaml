<Window x:Class="DemoLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoLayout"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15,2,2,2"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="10"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#FF343A40" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="/uac_logo.png" Margin="5"></Image>
                <TextBlock Padding="5" Foreground="White" Grid.Column="1" Text="UAC Integrated System" VerticalAlignment="Center"></TextBlock>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    <Label Foreground="White" Content="Registrar Module" FontWeight="Bold"></Label>
                    <Button Content="Student"></Button>
                    <Button Content="Section"></Button>
                    <Button Content="Grades Encoding"></Button>
                    <Button Content="Subject"></Button>
                    <Button Content="Reports"></Button>
                    <Button Content="Maintenance"></Button>
                    <Button Content="Announcements"></Button>
                    <Button Content="Servey"></Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid DockPanel.Dock="Top" Height="40" Background="#FFFFC107">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Margin="8" Source="/8182885.png"></Image>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Stefan"></TextBlock>
            <Image Margin="8" Grid.Column="2" Source="/6387426.png"></Image>
        </Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush Opacity="0.2" ImageSource="/uac_logo.png" Stretch="Uniform"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Foreground="Black" Content="Statistics (2026-2027)" FontWeight="Bold"></Label>
            <Label Foreground="Black" Content="Last 3 Days Application" FontWeight="Bold" Grid.Column="1"></Label>
            <Label Foreground="Black" Content="For Your Interview" FontWeight="Bold" Grid.Column="2" Background="#FFD21717"></Label>
            <TextBlock Text="117" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
            <TextBlock Text="Total Applicants" VerticalAlignment="Bottom"></TextBlock>
            <TextBlock Text="2" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="1"></TextBlock>
            <TextBlock Text="New Applicants" VerticalAlignment="Bottom" Grid.Row="1"></TextBlock>
            <TextBlock Text="17" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="2"></TextBlock>
            <TextBlock Text="Completed Requirements" VerticalAlignment="Bottom" Grid.Row="2"></TextBlock>
            <TextBlock Text="3" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="3"></TextBlock>
            <TextBlock Text="Applicants Schedule Today" VerticalAlignment="Bottom" Grid.Row="3"></TextBlock>
            <TextBlock Text="0" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="3" Grid.Column="1"></TextBlock>
            <TextBlock Text="Higher Education" VerticalAlignment="Bottom" Grid.Row="3" Grid.Column="1"></TextBlock>
            <TextBlock Text="1" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="2" Grid.Column="1"></TextBlock>
            <TextBlock Text="Senior High School" VerticalAlignment="Bottom" Grid.Row="2" Grid.Column="1"></TextBlock>
            <TextBlock Text="6" VerticalAlignment="Center" FontWeight="Bold" Grid.Row="1" Grid.Column="1"></TextBlock>
            <TextBlock Text="Basic Education" VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="1"></TextBlock>
            <TextBlock Text="1" VerticalAlignment="Center" FontWeight="Bold" Grid.Column="1"></TextBlock>
            <TextBlock Text="Preparatory Department" VerticalAlignment="Bottom" Grid.Column="1" />
            <TextBlock Text="0" VerticalAlignment="Center" FontWeight="Bold" Grid.Column="2" Foreground="White" FontSize="20"></TextBlock>
            <TextBlock Text="For Your Interview" VerticalAlignment="Bottom" Grid.Column="2" Foreground="White" FontSize="15"></TextBlock>
        </Grid>
    </DockPanel>
</Window>
